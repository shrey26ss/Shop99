        const slickOnProduct = () => {
            if ($('.product-slick').hasClass('slick-initialized')) {
                $('.product-slick').slick('unslick')
            }
            if ($('.slider-nav').hasClass('slick-initialized')) {
                $('.slider-nav').slick('unslick')
            }
            $('.product-slick').slick({
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: true,
                fade: true,
                asNavFor: '.slider-nav'
