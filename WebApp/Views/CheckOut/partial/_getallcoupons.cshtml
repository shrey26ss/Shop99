@model IEnumerable<Entities.Models.Coupon>
@if (Model != null && Model.Any())
{
    int i = 0;
    <div class="row">
        <div class="col-md-8">
            <div class="pro-group">
                <div class="product-offer">
                    <div class="offer-contain">
                        <ul class="couponslist">
                            @foreach (var item in Model)
                            {
                                i++;
                                <li data-coupon-code="@item.CouponCode" data-is-fixed="@item.IsFixed" data-coupon-value="@item.DiscountAmount">
                                    <span class="chk p-1">
                                        <input type="checkbox" @(i == 1 ? "checked" : "") />
                                    </span>
                                    <span class="code-lable ccp">
                                        @item.CouponCode
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="text-right"><a href="javascript:void(0)" class="btn-normal btn " id="btnBulkcoupon">Apply Coupon</a></div>
        </div>
    </div>
}
else
{
    <nodata>No Data Found</nodata>
}
