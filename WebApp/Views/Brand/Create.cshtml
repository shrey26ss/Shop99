@using Entities.Models;

@model Brands

<form asp-action="Create" method="Post">


        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="product-details-area">
                <div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <div class="label-wrapper">
                                <label class="col-form-label" for="Name">Name</label>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="input-group input-group-required">
                                <input class="form-control text-box single-line" asp-for="Name" type="text" required="Please fill brand name">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <div class="label-wrapper">
                                <label class="col-form-label" for="Name">Description</label>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="input-group input-group-required">
                                <input class="form-control text-box single-line" asp-for="Description" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <div class="label-wrapper">
                                <label class="col-form-label">Icon</label>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <input type="file" asp-for="Icon" accept=".svg">
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <input class="btn btn-primary float-right" type="submit">
                </div>
            </div>
        </div>

</form>