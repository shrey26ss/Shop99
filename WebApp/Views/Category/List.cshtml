@model IEnumerable<Entities.Models.Category>

@if (Model != null && Model.Any())
{
    int i = 0;
    foreach (var item in Model)        
    {
        i++;
        <tr>           
            <td>@i</td>
            <td>@item.CategoryName</td>
            <td>@item.ParentName</td>
            <td>@item.TAXRate</td>
            <td>@item.IsPublish</td>
            <td>
                <div class="card">
                    <div class="valign-wrapper pr12ImgNameDiv">
                    <img src="@item.Icon" class="img-fluid rounded-circle"  style="width:100px" onerror="this.onerror=null;this.src='/image/static/no-image.png'">
                    <div class="pr12AuthName fw500 fs18"></div>
                </div>
                </div>  
            </td>
            <td><input type="button" value="Edit" onclick="AddCategory('@item.CategoryId')" class="btn btn-sm btn-success"></td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="4">No Data Found</td>
    </tr>
}