@using Entities.Models;

@model Attributes

<form asp-action="Create" method="Post">
       
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id">
            <div id="product-details-area">
                <div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <div class="label-wrapper">
                                <label class="col-form-label" for="Name">Name</label>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="input-group input-group-required">
                                <input class="form-control text-box single-line" asp-for="Name" type="text" required="Please fill Attribute name">
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <div class="label-wrapper">
                                <label class="col-form-label" for="Name">Value</label>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="input-group input-group-required">
                                <input class="form-control text-box single-line" asp-for="Value" type="text">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-12">
            <input class="btn btn-primary float-right" type="submit">
        </div>



</form>