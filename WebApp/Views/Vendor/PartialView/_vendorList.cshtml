@using Entities.Models;
@model IEnumerable<VendorProfileList>

@if (Model.Any())
{
    int counter = 0;
    foreach (var item in Model)
    {
        counter++;
        <tr data-user-id="@item.UserId">
            <td>@counter</td>
            <td>@item.Name</td>
            <td>@item.ContactNo</td>
            <td>@item.ShopName</td>
            <td>@item.GSTNumber</td>
            <td>@item.TIN</td>
            <td>@item.Email</td>
            <td>@item.State</td>
            <td>@item.Address</td>
            @*<td>
                <span class="switch switch-sm">
                    <input type="checkbox" class="switch" id="isActive_@counter" checked="@item.IsActive">
                    <label for="isActive_@counter"></label>
                </span>
            </td>*@
            <td>
                <span class="switch switch-sm">
                    <input type="checkbox" class="switch" id="isApproved_@counter" onclick="ApproveVendor('@item.Id')" checked="@item.IsApproved">
                    <label for="isApproved_@counter"></label>
                </span>
            </td>
        </tr>
    }
}


<script>
    $(() => {
        callDataTable({ selector: 'table', isSearch: true });
    })
</script>