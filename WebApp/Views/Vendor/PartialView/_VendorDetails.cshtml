@using Entities.Models;
@model VendorProfile

<form method="post" asp-action="SaveVendorInformation">
    <div class="row">
        <input type="hidden" asp-for="Id" />
        <div class="col-sm-6 col-ms-6">
            <div class="form-group">
                <label asp-for="ShopName"></label>
                <input asp-for="ShopName" class="form-control" />
            </div>
        </div>
        <div class="col-sm-6 col-ms-6">
            <div class="form-group">
                <label asp-for="GSTNumber"></label>
                <input asp-for="GSTNumber" class="form-control" />
            </div>
        </div>
        <div class="col-sm-6 col-ms-6">
            <div class="form-group">
                <label asp-for="TIN"></label>
                <input asp-for="TIN" class="form-control" />
            </div>
        </div>
        <div class="col-sm-6 col-ms-6">
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
            </div>
        </div>
        <div class="col-sm-6 col-ms-6">
            <div class="form-group">
                <label asp-for="ContactNo"></label>
                <input asp-for="ContactNo" class="form-control" />
            </div>
        </div>
    </div>
    <hr />
    <div class="row text-center">
        <div class="col-sm-6 col-md-6">
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Save" />
            </div>
        </div>
    </div>
</form>
<script>
    $('#File').change(function () {
        const file = this.files[0];
        if (file) {
            let reader = new FileReader();
            reader.onload = function (event) {
                console.log(event.target.result);
                $('#blah').attr('src', event.target.result);
            }
            reader.readAsDataURL(file);
        }
    });
</script>