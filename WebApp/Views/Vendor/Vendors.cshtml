<div class="content-header clearfix">
    <h1 class="float-left">
        Vendor List
    </h1>
</div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12 table-responsive">
                <table class="table table-bordered" id="Grid">
                    <thead>
                        <tr role="row">
                            <th>#</th>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Shop</th>
                            <th>GST</th>
                            <th>TIN</th>
                            <th>Email</th>
                            <th>State</th>
                            <th>Address</th>
                            @*<th>IsActive</th>*@
                            <th>IsApproved</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(() => {
            loadData();
        })
        var loadData = () => {
            $.post('/Vendor/VendorList').done(function (result) {
                $('#Grid tbody').html(result);
            }).fail(function (xhr) {
            })
        };
        var ApproveVendor = (VendorId) => {
            $.post('/Vendor/ApproveVendorProfile', { VendorId }).done((result) => {
                console.log(result);
                Q.notify(result.statusCode, result.responseText);
            })
        }
    </script>
}