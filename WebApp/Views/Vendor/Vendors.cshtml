<div class="content-header clearfix">
    <h1 class="float-left">
        Vendor List
    </h1>
</div>
<div class="content">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered" id="Grid">
                        <thead>
                            <tr role="row">
                                <th>#</th>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Shop</th>
                                <th>GST</th>
                                <th>TIN</th>
                                <th>Email</th>
                                <th>State</th>
                                <th>Address</th>
                                <th>IsActive</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(() => {
            loadData();
        })
        var loadData = () => {
            $.post('/Vendor/VendorList').done(function (result) {
                $('#Grid tbody').html(result);
            }).fail(function (xhr) {
            })
        };
    </script>
}