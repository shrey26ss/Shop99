    <script>
        var SearchItems = [];
        var loadAutoSuggestion = async function (searchTerm = '', Top = 0 , triggerSuggestion=false) {
            await $.post(baseURL + `/Home/GetAutoSuggetion?searchText=${searchTerm}&Top=${Top}`).done(res => {
                if (SearchItems.length <= 0) {
                    SearchItems = res.result.filter(x => !SearchItems.includes(x));
                } else {
                    let objArr = SearchItems.map(x => JSON.stringify(x));
                    res.result.map(x => {
                        if (!objArr.includes(JSON.stringify(x))) {
                            SearchItems.push(x);
                        }
                    });
                }
            });
            if(triggerSuggestion){
                $("#SearchProduct").trigger("input");
            }
        }

        $(document).on('click', '.openMenu', (e) => {
            $('#Menu_side')?.addClass('open-side');
        });

        $("#SearchProduct").unbind().autocomplete({
            autoFocus: true,
            classes: {
                "ui-autocomplete": "highlight"
            },
            source: function (request, response) {
                var matcher = new RegExp("^" + $.ui.autocomplete.escapeRegex(request.term), "i");
                searchResult = [];
                let loopCount = SearchItems.length;
                for (let i = 0; i < loopCount; i++) {
                    let a = SearchItems[i];
                    let _label = matcher.test(a.name) ? a.name : null;
                    if (_label) {
                        searchResult.push({
                            label: _label,
                            url: (a.type === 'C') ? `/category/${a.id}` : (a.type === 'P') ? `/Product/${a.id}` : null
                        })
                    }
                }
                loadAutoSuggestion(request.term, 0, true);
                if (searchResult.length > 0) {
                    response(searchResult);
                }
            },
            select: function (event, ui) {
                let homePath=['/','/home']
                let u = new URL(window.location.href)
                if(homePath.includes(u.pathname)){
                    window.open(ui.item.url, '_blank');
                }
                else{
                    window.location.href = ui.item.url
                }
            },
            minLength: 3
        });

        loadAutoSuggestion('',2);

    </script>
