<div class="content-header clearfix">
    <h1 class="float-left">
        Coupon list
    </h1>
    <div class="float-right">
        <a class="btn btn-primary" href="javascript:void(0)" id="btnsNew">
            <i class="fas fa-plus-square"></i>
            Add new
        </a>
    </div>
</div>
<div class="content">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered" id="Grid">
                        <thead>
                            <tr role="row" style="" class="">
                                <th>#</th>
                                <th>Coupon Code</th>
                                <th>IsFixed</th>
                                <th>Discount Amount</th>
                                <th>Coupon Expiry</th>
                                <th>Is Active</th>
                                <th>Payment Mode</th>
                                <th>IsWelcomeCoupon</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#btnsNew').click(() => dialog.coupon());//AddCategory());
            loadData();
        })
        var loadData = function () {
            let request = {
                Id: 0
            };
            $.post('/Coupon/CouponsList', request).done(function (result) {
                $('#Grid tbody').html(result);
            }).fail(function (xhr) {
                console.log(xhr.responseText);
                alert('something went wrong');
            })
        };

        var UpdateIsActive = function (Id) {
            let IsActive = false;
            if ($('#IsActive_' + Id).is(":checked")) {
                IsActive = true;
            }
            let obj = {
                OfferID: Id,
                IsActive: IsActive
            }
            $.post('/Coupon/UpdateIsActiveOffer', obj).done(function (result) {
                console.log(result);
                Q.notify(result.statusCode, result.responseText);
                if (result.statusCode == 1) {
                    loadData();
                }
            }).fail(function (xhr) {
                console.log(xhr.responseText);
                alert('something went wrong');
            })
        }

        var deletes = (CouponId) => Q.confirm("Are You Sure. You Want To Delete Coupon", () => delCoupon(CouponId));

        var delCoupon = function (CouponId = 0) {
            $.post('/Coupon/DelCoupon', { CouponId }).done((res) => {
                Q.notify(res.statusCode, res.responseText);
                if (res.statusCode) {
                    loadData();
                }
            })
        }
    </script>
}