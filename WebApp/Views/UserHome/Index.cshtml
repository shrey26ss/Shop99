@{
	ViewData["Title"] = "Home Page";
}

<style>


	.summary-block {
		margin-bottom: 11px;
    background-color: #e9ebef;
    padding: 17px 10px;
		border-radius: 5px;
		display: flex;
		justify-content: space-between;
		    align-items: center;
	}

	.summary-block i{
		font-size: 2.5rem;
		/*color: #00c0ef;*/
	}


	.summary-price {
		color: #007bff;
		font-size: 25px;
		font-weight: 400;

	}

	p.summary-text{
		margin-bottom:0px;
	}

	

	.summary-title {
		font-weight: 700;
		font-size: 16px;
		color: #1c1e22;
		margin-bottom:0px;
	}


