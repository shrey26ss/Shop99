@using AppUtility.Helper
@using Entities.Enums;
@using WebApp.Models.ViewModels
@model Profileviewmodel
@{
    if (Model.Role == Role.ADMIN || Model.Role == Role.VENDOR)
        Layout = "_AdminLayout";
    else
        Layout = "_Layout";
}
<style>
    /**************For Profile********************/
    .emp-profile {
        padding: 2%;
