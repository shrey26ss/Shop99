        border-radius: 0.5rem;
        background: #fff;
    }

    @@media (min-width:200px) and (max-width:1024px) {
        .profile-head {
            margin-top: 20px;
        }
    }

    .profile-img {
        text-align: center;
    }

        .profile-img img {
            /*width: 70%;
                                        height: 100%;*/
        }

        .profile-img .file {
               position: relative;
    overflow: hidden;
    margin-top: -17%;
    width: 54%;
    border: none;
    border-radius: 0;
    font-size: 15px;
    background: #212529b8;
        }

            .profile-img .file input {
