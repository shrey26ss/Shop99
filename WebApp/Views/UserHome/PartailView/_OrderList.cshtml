@using Entities.Models;
@model IEnumerable<OrderDetailsColumn>

@if (Model.Any())
{
    <div class="widget">
        @foreach (var item in Model)
        {
            <a href="/productdetails/@item.VarriantID">
                <div class="summary-block">
                    <div class="summary-content">
                        <img loading="lazy" class="_396cs4" onerror="this.onerror=null;this.src='/assets/images/noimage.jpg'" src="@item.Thumbnail" />
                        <div class="summary-head">
                            <h5 class="summary-title">
                                @item.Product
                            </h5>
                            <h6>
                                @item.Title
                            </h6>
                            <p>@item.Attributes</p>
                        </div>
                        <div class="summary-price">
                            <p class="summary-text"><i class="fa fa-inr"></i> @item.Rate</p>
                        </div>
                       
                    </div>
                   
                </div>
              
            </a>
        }
    </div>
    <ul class="pagination cus-paginetion-view float-right">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
    </ul>
}
