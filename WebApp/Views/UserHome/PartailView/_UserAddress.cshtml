@using Entities.Models
@using Service.Models
@using Entities.Enums;
@model IEnumerable<UserAddress>
<div class="row justify-content-end">
    <div class="col-2    pl-2">
        <a href="#" onclick="EditAddress('0')"> Add new address</a>
    </div>
</div>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        string address = @item.HouseNo + " " + @item.Area + " " + @item.Landmark + " " + @item.Pincode + " " + @item.StateName;
        string checkedd = @item.IsDefault ? "checked" : "disabled";
        string AddressType = @item.AddressType != "" ? "(" + @item.AddressType + ")" : "";
        <div class="box">
            <div class="plan-selection">
                <div class="plan-data">
                    <input name="address" type="radio" class="with-font" data-address-id="@item.Id" @checkedd>
                    <label for="address1">@item.FullName @item.AddressType</label>
                    <i class="fa fa-edit text-primary" style="cursor:pointer;float:right" onclick="EditAddress(@item.Id)"></i>
                    <p class="plan-text">
                        @address
                    </p>
                </div>
            </div>
        </div>
    }
}
