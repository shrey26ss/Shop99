@using Entities.Models
@using Service.Models
@using Entities.Enums;
@model Response<IEnumerable<WishListSlide>>
@{
    Layout = null;
}


<a href="javascript:void(0)" class="overlay" onclick="closeWishlist()"></a>
<div class="cart-inner">
    <div class="cart_top">
        <h3>my wishlist</h3>
        <div class="close-cart">
            <a href="javascript:void(0)" onclick="closeWishlist()">
                <i class="fa fa-times" aria-hidden="true"></i>
            </a>
        </div>
    </div>
    <div class="cart_media">
        <ul class="cart_product">
            @if (Model.StatusCode == ResponseStatus.Success && Model.Result.Any())
            {
                @foreach (var item in Model.Result)
                {
                    <li>
                        <div class="media">
                            <a href="/productdetails/@item.VariantID" target="_blank">
                                <img alt="megastore1" class="me-3" src="@item.ImagePath" onerror="this.onerror=null;this.src='/assets/images/noimage.jpg'">
                            </a>
                            <div class="media-body">
                                <a href="/productdetails/@item.VariantID" target="_blank">
                                    <h4>@item.Title</h4>
                                </a>
                                <h6>@item.SellingCost <span>@item.MRP</span></h6>
                                <div class="addit-box">
                                    <div class="pro-add">
                                        <a href="javascript:void(0)" class="move-to-cart" data-wishlist-id="@item.WishListId">
                                           Move To Cart
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </li>
                }
            }
            else
            {
                <li>
                    <img src="~/Image/emptyEishList.png">
                </li>
            }

        </ul>
        @if (Model.StatusCode == ResponseStatus.Success && Model.Result.Any())
        {
            <ul class="cart_total">
                <li>
                    <div class="buttons">
                        <a href="/wishlist" class="btn btn-solid btn-block btn-md">view wislist</a>
                    </div>
                </li>
            </ul>
        }
    </div>
</div>