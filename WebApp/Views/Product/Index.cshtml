<div class="content-header clearfix">    <h1 class="float-left">        Products    </h1>    <div class="float-right">        <a class="btn btn-primary" href="/Product/GetProductSectionView/0">            <i class="fas fa-plus-square"></i>            Add Product        </a>    </div></div><div class="content">    <div class="card">        <div class="card-body">            <div class="row">                <div class="col-md-12">                    <table class="table table-bordered" id="Grid">                        <thead>                            <tr role="row">                                <th>#</th>                                <th>Action</th>                                <th>Name</th>                                <th>Title</th>                                <th>Category</th>                                <th>Brand</th>                                <th>Description</th>                                <th>SKU</th>                            </tr>                        </thead>                        <tbody></tbody>                    </table>                </div>            </div>        </div>    </div></div>@section scripts{    <script>        $(() => {            loadData();        })        var loadData = () => {            $.post('/Product/ProductList').done(function (result) {                $('#Grid tbody').html(result);            }).fail(function (xhr) {                console.log(xhr.responseText);            })        };    </script>}