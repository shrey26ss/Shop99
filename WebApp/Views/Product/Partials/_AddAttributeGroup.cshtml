<style>
    .input-group-text {
        height: 38px;
    }
</style>
<div class="col-md-12 attrCombination" id="@DateTime.Now.ToString("ddMMyyyyhhmmssmmm")">
    <div class="form-group row">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label class="col-form-label required" for="Title">Title</label>
            </div>
        </div>
        <div class="col-md-9">
            <div class="input-group input-group-required">
                <input class="form-control text-box single-line" id="titlewords" type="text" name="Title">
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3 label-wrapper">
            <label class="col-form-label required" for="Price">MRP</label>
        </div>
        <div class="col-md-9">
            <div class="input-group input-group-required">
                <input class="form-control text-box single-line" type="text" id="MRP" name="MRP" value="0">
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label class="col-form-label required" for="SellingCost" id="sellingcost">Selling Cost</label>
            </div>
        </div>
        <div class="col-md-9">
            <div class="input-group input-group-required">
                <input class="form-control text-box single-line" type="text" id="SellingCst" name="SellingCost" value="0">
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3 label-wrapper">
            <label class="col-form-label required" for="Quantity">Quantity</label>
        </div>
        <div class="col-md-4">
            <div class="input-group input-group-required">
                <input class="form-control text-box single-line" type="text" name="Quantity" value="1" id="quantity">
            </div>
        </div>
        <div class="col-md-1 label-wrapper">
            <label class="col-form-label required" for="Quantity">Return</label>
        </div>
          <div class="col-md-4">
            <div class="input-group input-group-required">
                <input class="form-control text-box single-line" type="text" name="ReturnInDays" value="0" placeholder="Return In Days" id="returnhere">
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label class="col-form-label" for="HSN">HSN</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="input-group input-group-required">
                <input class="form-control text-box single-line" type="text" id="HSN_1" name="HSN">
            </div>
        </div>
        <div class="col-md-1 label-wrapper">
            <label class="col-form-label" for="GTIN">GTIN</label>
        </div>
        <div class="col-md-4">
            <div class="input-group input-group-required">
                <input class="form-control text-box single-line" type="text" id="GTIN_1" name="GTIN">
            </div>
        </div>
    </div>
     <div class="form-group row">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label class="col-form-label" for="HSN">Warranty</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="input-group input-group-required">
                <input class="form-control text-box single-line" type="text" name="Warranty" value="0" placeholder="Warrent in Numbers" id="warranty">
            </div>
        </div>
        <div class="col-md-1 label-wrapper">
            <label class="col-form-label" for="GTIN">Warranty Unit</label>
        </div>
        <div class="col-md-4">
            <div class="input-group input-group-required">
                <select class="form-control" name="WarrantyUnit" id="yearmonth">
                    <option value="YEAR"> YEAR </option>
                    <option value="MONTH"> MONTH </option>
                    </select>
            </div>
        </div>
     </div>


    <div class="form-group row">
        <div class="col-md-3">
            <div class="label-wrapper">
                <label class="col-form-label" for="HSN">Discount Rate</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="input-group input-group-required">
                <input class="form-control text-box single-line" type="text" id="Discountrate" name="Discountrate" value="0" placeholder="Discount Rate">
            </div>
        </div>
       
    </div>

    <div class="form-group row">
        <div class="col-md-3"></div>
        <div class="col-md-4">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="checkbox" name="IsFeatured" id="IsFeatured" class="mt-0">
                    </div>
                </div>
                <label class="form-control" for="IsFeatured">IsFeatured</label>
            </div>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-md-4">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input type="radio" name="IsShowOnHome" id="IsShowOnHome">
                    </div>
                </div>
                <label class="form-control" for="IsShowOnHome">Is Show On Home</label>
            </div>
        </div>
    </div>
    

    <div class="form-group row">
        <div class="col-md-12 text-right">
         
            <button type="button" class="btn btn-sm btn-info btnAddNewAttribute mb-2">Add Attribute</button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped attributeGrid" id="dataTable1">
            <thead>
                <tr>
                    <th>#</th>
                    <th class="text-nowrap">Attribute</th>
                    <th class="text-nowrap">Attribute Value</th>
                    <th class="text-nowrap">Action</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <div class="form-group row">
        <div class="col-md-12 text-right">
            <button type="button" class="btn btn-sm btn-info mb-2" onclick="recordsintable()">Add Attribute Group</button>
        </div>
    </div>


    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped " id="dataTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th class="text-nowrap">Title</th>
                    <th class="text-nowrap">MRP</th>
                    <th class="text-nowrap">Selling Cost</th>
                    <th class="text-nowrap">Quantity</th>
                    <th class="text-nowrap">Return</th>
                    <th class="text-nowrap">HSN</th>
                    <th class="text-nowrap">GTIN</th>
                    <th class="text-nowrap">Warranty</th>
                    <th class="text-nowrap">Warranty Unit</th>
                    <th class="text-nowrap">Discount Rate</th>
                    <th class="text-nowrap">IsFeatured</th>
                    <th class="text-nowrap">Is Show On Home</th>
                    <th class="text-nowrap">Is Show On Home</th>
                    <th class="text-nowrap">Attribute</th>
                </tr>
            </thead>
            <tbody>
                @*<tr>
                    <td>#</td>
                    <td class="text-nowrap">Title</td>
                    <td class="text-nowrap">MRP</td>
                    <td class="text-nowrap">Selling Cost</td>
                    <td class="text-nowrap">Quantity</td>
                    <td class="text-nowrap">Return</td>
                    <td class="text-nowrap">HSN</td>
                    <td class="text-nowrap">GTIN</td>
                    <td class="text-nowrap">Warranty</td>
                    <td class="text-nowrap">Warranty Unit</td>
                    <td class="text-nowrap">Discount Rate</td>
                    <td class="text-nowrap">IsFeatured</td>
                    <td class="text-nowrap">
                        Is Show On Home
                    </td>
                    <td class="text-nowrap">
                       <i class="fa fa-trash text-danger"></i>
                    </td>
                </tr>*@
            </tbody>
        </table>
    </div>

</div>

<script>
    function recordsintable(){
        var AttributeValueData = [];
        $("#dataTable1 tbody tr").each(function () {
            var AttributeValue = $(this).find("td:nth-child(3)").text();
            AttributeValueData.push(AttributeValue);
        });
        var integerValues = [];
        var characterValues = [];

        AttributeValueData.forEach(function (value) {
            if (!isNaN(parseInt(value))) {
                integerValues.push(parseInt(value));
            } else {
                characterValues.push(value);
            }
        });
        var commaSeparatedIntegerValues = integerValues.join(", ");
        var commaSeparatedCharacterValues = characterValues.join(", ");

        if (commaSeparatedCharacterValues =="")
        {
            alert("Please add attribute first");
        }
        else
        {
            let pictureGrid = $(`#dataTable`);
            let count = pictureGrid.find('tr').length;
            var newRow = "<tr>" +
                "<td>" +  count  + "</td>" +
                "<td>" + $("#titlewords").val() + "</td>" +
                "<td>" + $("#MRP").val() + "</td>" +
                "<td>" + $("#SellingCst").val() + "</td>" +
                "<td>" + $("#quantity").val() + "</td>" +
                "<td>" + $("#returnhere").val() + "</td>" +
                "<td>" + $("#HSN_1").val() + "</td>" +
                "<td>" + $("#GTIN_1").val() + "</td>" +
                "<td>" + $("#warranty").val() + "</td>" +
                "<td>" + $("#yearmonth").val() + "</td>" +
                "<td>" + $("#Discountrate").val() + "</td>" +
                "<td>" + $("#IsFeatured").prop("checked") + "</td>" +
                "<td>" + $("#IsShowOnHome").prop("checked") + "</td>" +
                "<td>" + commaSeparatedCharacterValues + "</td>" +
                "<td class='text-nowrap'><i class='fa fa-trash text-danger'></i></td>" +
                "</tr>";

            // Append the new row to the table body
            $("#dataTable tbody").append(newRow);
        }
      
    }
</script>

