@using Entities.Models
@model ViewVariantCombinationModel
<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <input type="hidden" id="ProductId" name="ProductId" value="28">
            <div id="AttributeView">
                <div class="card" data-card-name="product-info" id="product-info">
                    <div class="card-body" id="pictureSection">
                        <div class="row">
                            <div class="col-md-12" id="0301202305061006">
                                <div class="form-group row">
                                    <div class="col-md-3 label-wrapper">
                                        <label class="col-form-label required" for="Price">Picture</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="input-group input-group-required">
                                            <input class="text-box single-line" type="file" accept=".jpg,jpeg" id="PictureFile" name="PictureFile" multiple="">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <div class="label-wrapper">
                                            <label class="col-form-label required" for="Alt">Alt</label>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="input-group input-group-required">
                                            <input class="form-control text-box single-line" type="text" id="Alt" name="Alt" value="@Model.ImgAlt">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <div class="label-wrapper">
                                            <label class="col-form-label required" for="Title">Title</label>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="input-group input-group-required">
                                            <input class="form-control text-box single-line" type="text" id="Title" name="Title" value="@Model.ImgAlt">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <div class="label-wrapper">
                                            <label class="col-form-label required" for="Displayorder">Display order</label>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="input-group input-group-required ">
                                            <input class="form-control text-box single-line" type="number" id="DisplayOrder" name="DisplayOrder" value="1">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3">
                                        <div class="label-wrapper">
                                            <label class="col-form-label required" for="Displayorder">Colors</label>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="input-group input-group-required">
                                            <select class="form-control text-box single-line" id="attrColor">
                                                @if(Model.VariantColor != null && Model.VariantColor != ""){
                                                    <option value="@Model.VariantColor" data-group-id="@Model.VariantId">@Model.VariantColor</option>
                                                }
                                                else
                                                {
                                                 <option value="Defult" data-group-id="@Model.VariantId">Defult</option>   
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-3">
                                    </div>
                                    <div class="col-md-9">
                                        <div class="input-group input-group-required">
                                            <button class="btn btn-sm btn-success" type="button" id="AddProductImg">UPLOAD</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>