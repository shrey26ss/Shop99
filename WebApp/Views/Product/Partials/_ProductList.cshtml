@using Entities.Models;
@model IEnumerable<Products>

@if(Model.Any()){
    int counter = 0;
    foreach (var item in Model)
    {
        counter++;
        <tr>
            <td>@counter</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.CategoryName</td>
            <td>@item.BrandName</td>
            <td>@item.Description</td>
            <td>@item.SKU</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/Product/AddVariant?Id=@item.Id&cId=@item.CategoryId">Add Attribute </a>
                <a class="btn btn-sm btn-primary" href="/Product/Attributes?Id=@item.Id">View Variant </a>
            </td>
        </tr>
    }
}